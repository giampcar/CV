#riepilogo, #main-content, #menu-lato{
position:relative;
margin:0;
padding-left:10px;
}

#scroll-left{
margin:0;
padding:0px;
height:50vw;
overflow-y: scroll;
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */

}

#scroll-left::-webkit-scrollbar {
    display: none;
}


#photo{
height:70px;
width:100%;
background-color:red;
padding:10px;
}

#info{
padding:0px;
margin:0px;
border:0px;
}

#CV-download{
padding:0px;
margin:0px;
width:100%;
}

.art-table{
list-style-type: none;
    display: flex;
    justify-content: space-between;
	width:100%;
    margin-bottom: 5px;
}
.art-table-multi {
    width:100%;
	 display: flex;
	justify-content: space-between;
    margin-bottom: 5px;
	margin:0;
	padding:0;
	border:0;
}
.art-table-multi a{
	margin:0;
	padding:0;
	border:0;
	    margin-bottom: 5px;

	}

hr {
	height:5px;
	width:90%;
		margin-bottom:10px;
	margin-top:5px;
	  border-top: 3px solid red;
	  border-radius: 2px;
}

.art-lang-skills-item {
width: 23%;
    display: inline-block;
    vertical-align: top;
    font-size: 13px;
}

.progressbar-text {
font-weight:bold;
font-size: 1.3em;
}


.art-lang-skills .art-lang-skills-item .art-cirkle-progress {
    width: 65%;
    margin: 0 auto 15px;
}




#photo_2{
height:100px;
width:100%;
background-color:black;
padding:10px;
}



ul {
  text-align:left;
  list-style-type: none;
  margin: 0;
  padding: 0;

  }

li a {
  display: block;
  color: grey;
  padding: 8px 16px;
  text-decoration: none;

}

li a.active {
  background-color: grey;
  color: white;
  text-decoration: none;
}

li a:hover:not(.active) {
  background-color: grey;
  color: white;
  text-decoration: none;
}



